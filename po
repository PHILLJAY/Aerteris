
public class charac {

	public int health;
	public int defense;
	public int attack;
	
	public charac(){
		health=100;
		defense=5;
		attack=20;
	}
	
	
	public static void main(String args[]){
		charac player =  new charac();
		charac monster =  new charac();
		attack(player,monster);
		
		printstat(monster);
		
	}


	public static void attack(charac x, charac y){
		y.health=y.health+y.defense-x.attack;
	}
	
	public static void printstat(charac x){
		System.out.println("Monster's stats:");
		System.out.println("health :"+ x.health);
		System.out.println("attack :"+ x.attack);
		System.out.println("defense :"+ x.defense);
	}
	
}
